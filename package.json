{
  "name": "cloudsmith",
  "publisher": "Cloudsmith",
  "displayName": "Cloudsmith",
  "description": "View and manage your Cloudsmith artifacts directly via VS Code.",
  "version": "1.0.0",
  "license": "SEE LICENSE IN LICENSE",
  "homepage": "https://github.com/cloudsmith-io/cloudsmith-vscode-extension/blob/main/README.md",
  "bugs": {
    "url": "https://github.com/cloudsmith-io/cloudsmith-vscode-extension/issues",
    "email": "support@cloudsmith.io"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cloudsmith-io/cloudsmith-vscode-extension"
  },
  "icon": "media/logo.png",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "cloudsmithSideBar",
          "title": "Cloudsmith",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "cloudsmithSideBar": [
        {
          "id": "cloudsmithView",
          "name": "Workspaces"
        },
        {
          "id": "helpView",
          "name": "Help and Feedback"
        }
      ]
    },
    "commands": [
      {
        "command": "cloudsmith.openLink",
        "title": "Open Link"
      },
      {
        "command": "cloudsmith.openSettings",
        "title": "Open Cloudsmith Settings",
        "category": "Cloudsmith",
        "icon": "$(settings-gear)"
      },
      {
        "command": "cloudsmith.configureCredentials",
        "title": "Configure Cloudsmith Credentials",
        "category": "Cloudsmith",
        "icon": "$(key)"
      },
      {
        "command": "cloudsmith.connectCloudsmith",
        "title": "Connect to Cloudsmith",
        "category": "Cloudsmith",
        "icon": "$(debug-disconnect)"
      },
      {
        "command": "cloudsmith.clearCredentials",
        "title": "Clear stored credentials",
        "icon": "$(notebook-delete-cell)"
      },
      {
        "command": "cloudsmith.copySelected",
        "title": "Copy to Clipboard"
      },
      {
        "command": "cloudsmith.inspectPackage",
        "title": "Inspect package"
      },
      {
        "command": "cloudsmith.inspectPackageGroup",
        "title": "Inspect package group"
      },
      {
        "command": "cloudsmith.openPackage",
        "title": "View package in Cloudsmith"
      },
      {
        "command": "cloudsmith.openPackageGroup",
        "title": "View package group in Cloudsmith"
      },
      {
        "command": "cloudsmith.selectWorkspace",
        "title": "Select Workspace from Workspaces view"
      },
      {
        "command": "cloudsmith.selectRepo",
        "title": "Select Repo from Repos view"
      },
      {
        "command": "cloudsmith.openWorkspacesViewItem",
        "title": "Open Workspace Item"
      },
      {
        "command": "cloudsmith.openReposViewItem",
        "title": "Open Repos Item"
      },
      {
        "command": "cloudsmith.openPackagesViewItem",
        "title": "Open Packages Item"
      },
      {
        "command": "cloudsmith.workspacesContextAction",
        "title": "Workspace Context Action"
      },
      {
        "command": "cloudsmith.reposContextAction",
        "title": "Repos Context Action"
      },
      {
        "command": "cloudsmith.packagesContextAction",
        "title": "Packages Context Action"
      },
      {
        "command": "cloudsmith.refreshView",
        "title": "Refresh Packages",
        "icon": "$(refresh)"
      },
      {
        "command": "cloudsmith.cloudsmithWorkspaces",
        "title": "Workspaces: Load Workspaces"
      },
      {
        "command": "cloudsmith.cloudsmithWorkspacesQP",
        "title": "Workspaces: Get a list of all workspaces the user belongs to."
      },
      {
        "command": "cloudsmith.cloudsmithReposList",
        "title": "Repos: Load Repos"
      },
      {
        "command": "cloudsmith.cloudsmithReposListQP",
        "title": "Repos: Get all repositories associated with current user"
      },
      {
        "command": "cloudsmith.cloudsmithReposListWorkspaceQP",
        "title": "Repos: Get all repositories within a workspace"
      },
      {
        "command": "cloudsmith.cloudsmithReposCreateTemplate",
        "title": "Repos: Create a template file to configure your repository."
      },
      {
        "command": "cloudsmith.cloudsmithReposCreateNew",
        "title": "Repos: Create a new repository from the open template window"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "cloudsmith.inspectPackage",
          "when": "view == cloudsmithView && viewItem == package",
          "group": "navigation"
        },
        {
          "command": "cloudsmith.inspectPackageGroup",
          "when": "view == cloudsmithView && viewItem == packageGroup",
          "group": "navigation"
        },
        {
          "command": "cloudsmith.copySelected",
          "when": "view == cloudsmithView && viewItem == packageDetail",
          "group": "9_cutcopypaste"
        },
        {
          "command": "cloudsmith.openPackage",
          "when": "view == cloudsmithView && viewItem == package",
          "group": "navigation"
        },
        {
          "command": "cloudsmith.openPackageGroup",
          "when": "view == cloudsmithView && viewItem == packageGroup",
          "group": "navigation"
        }
      ],
      "view/title": [
        {
          "command": "cloudsmith.refreshView",
          "group": "navigation",
          "when": "view == cloudsmithView"
        },
        {
          "command": "cloudsmith.openSettings",
          "group": "navigation",
          "when": "view == cloudsmithView"
        },
        {
          "command": "cloudsmith.configureCredentials",
          "group": "navigation",
          "when": "view == cloudsmithView"
        },
        {
          "command": "cloudsmith.clearCredentials",
          "group": "navigation",
          "when": "view == cloudsmithView"
        },
        {
          "command": "cloudsmith.connectCloudsmith",
          "group": "navigation",
          "when": "view == cloudsmithView"
        }
      ]
    },
    "configuration": {
      "title": "Cloudsmith",
      "properties": {
        "cloudsmith.useLegacyWebApp": {
          "type": "boolean",
          "default": false,
          "description": "If enabled, the extension will use the legacy webapp 'cloudsmith.io' for platform links."
        },
        "cloudsmith.inspectOutput": {
          "type": "boolean",
          "default": false,
          "description": "If enabled, inspect will create a new text document with the results. By default it sends to Output tab."
        },
        "cloudsmith.showMaxPackages": {
          "type": "integer",
          "default": 30,
          "maximum": 30,
          "minimum": 1,
          "description": "Set the maximum number of packages to be returned per repository. Current maximum is 30. "
        },
        "cloudsmith.groupByPackageGroups": {
          "type": "boolean",
          "default": false,
          "description": "If enabled, packages are displayed via Package Group."
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.100.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1"
  },
  "dependencies": {
    "child_process": "^1.0.2",
    "dotenv": "^16.5.0",
    "file": "^0.2.2",
    "json": "^11.0.0",
    "path": "^0.12.7"
  },
  "keywords": [
        "cloudsmith",
        "devops",
        "artifact management",
        "packages",  
        "alpine",
        "cargo",
        "chocolatey",     
        "composer",
        "conan",
        "conda",
        "cran",
        "dart",
        "debian",
        "docker",
        "go",
        "gradle",
        "helm",
        "hex",
        "maven",
        "npm",
        "nuget",
        "powershell",
        "python",
        "repositories",
        "rpm",
        "ruby",
        "sbt",
        "swift",
        "terraform",
        "unity",
        "vagrant"
    ]
}